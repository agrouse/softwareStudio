<h2> Details about <%= @chore.task %> </h2>
 <ul>
  <li>Status:
   <%= @chore.status %> </li>
  <li>Priority:
    <%= @chore.priority %>
  <li>Person Assigned:
    <%= @chore.person_assigned %> </li>
  <li>Last Accompished:
    <%= @chore.last_accomplished %>
    
</ul>

<h3>Description:</h3> 

<p><%= @chore.description %> </p>

<h2>Update chore</h2>
<%= form_tag chore_path, :method => :put do %>
    <%= label :chore, :task, 'Chore' %>
    <%= text_field :chore, :task  %>
    
    <%= label :chore, :priority, 'Priority' %>
    <%= select :chore, :priority, ['low', 'moderate', 'high'] %>
    
    
    <%= submit_tag 'Update'%>
    <% end %>

<%= link_to 'Back to chores list', chores_path %>