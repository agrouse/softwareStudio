
<div id="page_content">


<h2> Details about <%= @people.first_name %> <%= @people.last_name%> </h2>
 <ul>
  <li>Username:
   <%= @people.username %> </li>
  <li>Description:
    <%= @people.description %>
  <li>household:
    <%if @people.household%>
        <%= @people.household.name %> </li>
    <%else%>
        None </li>
    <%end%>
</ul>
<br>

<br>
<h2>Update Profile</h2>
<%= form_tag person_path, :method => :put do %>
    <%= label :people, :first_name, 'first name' %>
    <%= text_field :people, :first_name  %>
    
    <%= label :people, :last_name, 'Last name' %>
    <%= text_field :people, :last_name  %>
    </br>
    <%= label :people, :description, 'Description' %>
    <%= text_field :people, :description %>
    
    <%= label :people, :household_id, 'Household' %>
    <%= collection_select :people, :household_id, Household.all, :id, :name%>
    
    
    <%= submit_tag 'Update'%>
    <% end %>


<%= link_to 'Back to profile list', people_path %>

</div>