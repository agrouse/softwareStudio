<div id = "signupWrapper">
    <div class="row">
        <div class="col-md-12">
                <div class="box">
                    <div class="col-md-5">
                        <a href="/access/landing" style="color:white;"><span style="font-size: 30px; margin-top: 5%;" class="glyphicon glyphicon-circle-arrow-left"></span></a>
                    </div>
                    <div class="col-md-5">
                        <h1 style="color:white;">Sign Up</h1>
                    </div>

                        <%= form_for :people, :url => {:action => "create"} do |f| %>
                            <div class="signupForm">
                                <div class = "row">
                                    <%= f.text_field :first_name, placeholder: "First name", :class =>'custom-control'%>
                                </div>
                                <div class = "row">
                                    <%= f.text_field :last_name, placeholder: "Last name", :class =>'custom-control'%>
                                </div>
                                <div class = "row">
                                    <%= f.text_field :username, placeholder: "User name", :class =>'custom-control' %>
                                </div>
                                <div class= "row">
                                    <%= f.password_field :password, placeholder: "Password", :class => 'custom-control' %>
                                </div>
                                <div class="row">
                                    <%= f.password_field :password_confirmation, placeholder: "Confirm password", :class => 'custom-control' %>
                                </div>
                                
                                <div class="row">
                                    <%= button_tag(type: 'submit', class: "submitBtn btn btn-primary") do %>
                                        <span class="glyphicon glyphicon-ok"></span> 
                                    <% end %>
                                </div>
                                
                                
  

                            </div>
                            <% end %>
                </div>
        </div>
    </div>
</div>