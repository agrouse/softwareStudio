<div id = "signupWrapper">
    <div class="jumbotron">
        <div class = "row">
            <div class="title col-md-12">
                    <h1 style="color:white; text-align:center;">sign up</h1>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="signUpForm">
                <%= form_for :people, :url => {:action => "create"} do |f| %>
                    <div class = "col-md-6 col-md-offset-5">
                        <%= f.text_field :first_name, placeholder: "First name", :class =>'inputfield'%>
                    </div>
                    <div class = "col-md-6 col-md-offset-5">
                        <%= f.text_field :last_name, placeholder: "Last name", :class =>'inputfield'%>
                    </div>
                    <div class = "col-md-6 col-md-offset-5">
                        <%= f.text_field :username, placeholder: "User name", :class =>'inputfield' %>
                    </div>
                    <div class= "col-md-6 col-md-offset-5">
                        <%= f.password_field :password, placeholder: "Password", :class => 'inputfield' %>
                    </div>
                    <div class="col-md-6 col-md-offset-5">
                        <%= f.password_field :password_confirmation, placeholder: "Confirm password", :class => 'inputfield' %>
                    </div>
                    
                    <div class="col-md-6 col-md-offset-5">
                        <%= f.submit 'Submit', :class => "button btn" %>
                    </div>
                        
                    <% end %>
        </div>
    </div>
</div>