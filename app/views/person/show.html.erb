<div id="page_content">


<h2> Details about <%= @people.name %> </h2>
 <ul>
  <li>Username:
   <%= @people.username %> </li>
  <li>Description:
    <%= @people.description %>
  <li>household:
    <%= @people %> </li>
</ul>
<br>

<br>
<h2>Update people</h2>
<%= form_tag person_path, :method => :put do %>
    <%= label :people, :name, 'Name' %>
    <%= text_field :people, :name  %>
    
    <%= label :people, :description, 'Description' %>
    <%= text_field :people, :description %>
    
    <%= label :people, :household, 'Household' %>
    <%= select :people, :household, ['home1', 'home2', 'home3','other']%>
    
    
    <%= submit_tag 'Update'%>
    <% end %>

<%= link_to 'Back to chores list', chores_path %>

</div>